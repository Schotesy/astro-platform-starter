---
// Footer data
const currentYear = new Date().getFullYear();

const footerLinks = {
    product: [
        { name: 'Features', href: '/features' },
        { name: 'Pricing', href: '/pricing' },
        { name: 'API Documentation', href: '/docs' },
        { name: 'Integrations', href: '/integrations' },
        { name: 'Security', href: '/security' },
        { name: 'Enterprise', href: '/enterprise' }
    ],
    company: [
        { name: 'About Us', href: '/about' },
        { name: 'Careers', href: '/careers' },
        { name: 'Press Kit', href: '/press' },
        { name: 'Blog', href: '/blog' },
        { name: 'Partners', href: '/partners' },
        { name: 'Contact', href: '/contact' }
    ],
    resources: [
        { name: 'Help Center', href: '/help' },
        { name: 'Community', href: '/community' },
        { name: 'Tutorials', href: '/tutorials' },
        { name: 'Webinars', href: '/webinars' },
        { name: 'Case Studies', href: '/case-studies' },
        { name: 'Status Page', href: '/status' }
    ],
    legal: [
        { name: 'Privacy Policy', href: '/privacy' },
        { name: 'Terms of Service', href: '/terms' },
        { name: 'Cookie Policy', href: '/cookies' },
        { name: 'GDPR', href: '/gdpr' },
        { name: 'Compliance', href: '/compliance' }
    ]
};

const socialLinks = [
    { name: 'Twitter', href: 'https://twitter.com/bullcast', icon: 'twitter' },
    { name: 'LinkedIn', href: 'https://linkedin.com/company/bullcast', icon: 'linkedin' },
    { name: 'GitHub', href: 'https://github.com/bullcast', icon: 'github' },
    { name: 'YouTube', href: 'https://youtube.com/bullcast', icon: 'youtube' },
    { name: 'Discord', href: 'https://discord.gg/bullcast', icon: 'discord' }
];
---

<footer class="footer-gradient">
    <!-- Main Footer Content -->
    <div class="container mx-auto px-4 py-16">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            <!-- Brand Section -->
            <div class="lg:col-span-4">
                <div class="mb-8">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="footer-logo">
                            <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect width="40" height="40" rx="8" fill="url(#footerGradient)"></rect>
                                <path
                                    d="M12 28V12H16C18.2091 12 20 13.7909 20 16C20 17.1046 19.5523 18.1046 18.8284 18.8284C19.5523 19.5523 20 20.5523 20 21.6569C20 23.8660 18.2091 25.6569 16 25.6569H14V28H12Z"
                                    fill="white"></path>
                                <defs>
                                    <linearGradient id="footerGradient" x1="0" y1="0" x2="40" y2="40" gradientUnits="userSpaceOnUse">
                                        <stop stop-color="#2563EB"></stop>
                                        <stop offset="1" stop-color="#9333EA"></stop>
                                    </linearGradient>
                                </defs>
                            </svg>
                        </div>
                        <span class="text-2xl font-bold text-white">Bullcast</span>
                    </div>

                    <p class="text-gray-300 mb-6 leading-relaxed">
                        Empowering creators and enterprises with cutting-edge broadcasting technology. Stream, engage, and scale your content to millions
                        worldwide.
                    </p>

                    <!-- Newsletter Signup -->
                    <div class="newsletter-signup">
                        <h4 class="text-white font-semibold mb-3">Stay Updated</h4>
                        <form class="flex gap-2">
                            <input
                                type="email"
                                placeholder="Enter your email"
                                class="newsletter-input"
                                style="
                  flex: 1;
                  padding: 0.75rem 1rem;
                  background: rgb(255 255 255 / 0.1);
                  border: 1px solid rgb(255 255 255 / 0.2);
                  border-radius: 0.5rem;
                  color: white;
                  font-size: 0.875rem;
                "
                            />
                            <button type="submit" class="newsletter-btn"> Subscribe </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Links Sections -->
            <div class="lg:col-span-8">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                    <!-- Product Links -->
                    <div>
                        <h3 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Product</h3>
                        <ul class="space-y-3">
                            {
                                footerLinks.product.map((link) => (
                                    <li>
                                        <a href={link.href} class="footer-link">
                                            {link.name}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>

                    <!-- Company Links -->
                    <div>
                        <h3 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Company</h3>
                        <ul class="space-y-3">
                            {
                                footerLinks.company.map((link) => (
                                    <li>
                                        <a href={link.href} class="footer-link">
                                            {link.name}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>

                    <!-- Resources Links -->
                    <div>
                        <h3 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Resources</h3>
                        <ul class="space-y-3">
                            {
                                footerLinks.resources.map((link) => (
                                    <li>
                                        <a href={link.href} class="footer-link">
                                            {link.name}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>

                    <!-- Legal Links -->
                    <div>
                        <h3 class="text-white font-semibold mb-4 text-sm uppercase tracking-wide">Legal</h3>
                        <ul class="space-y-3">
                            {
                                footerLinks.legal.map((link) => (
                                    <li>
                                        <a href={link.href} class="footer-link">
                                            {link.name}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Trust Indicators -->
        <div class="border-t border-white/10 pt-12 mt-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
                <div class="trust-indicator">
                    <div class="trust-icon">üîí</div>
                    <div>
                        <h4 class="text-white font-semibold mb-1">Enterprise Security</h4>
                        <p class="text-gray-400 text-sm">SOC 2 Type II certified with bank-grade encryption</p>
                    </div>
                </div>

                <div class="trust-indicator">
                    <div class="trust-icon">‚ö°</div>
                    <div>
                        <h4 class="text-white font-semibold mb-1">99.9% Uptime</h4>
                        <p class="text-gray-400 text-sm">Guaranteed reliability with global redundancy</p>
                    </div>
                </div>

                <div class="trust-indicator">
                    <div class="trust-icon">üåç</div>
                    <div>
                        <h4 class="text-white font-semibold mb-1">Global Scale</h4>
                        <p class="text-gray-400 text-sm">200+ edge locations worldwide</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10">
        <div class="container mx-auto px-4 py-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <!-- Copyright -->
                <div class="text-gray-400 text-sm">
                    ¬© {currentYear} Bullcast, Inc. All rights reserved.
                </div>

                <!-- Social Links -->
                <div class="flex items-center gap-4">
                    {
                        socialLinks.map((social) => (
                            <a href={social.href} class="social-link" aria-label={social.name} target="_blank" rel="noopener noreferrer">
                                {social.icon === 'twitter' && (
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                                    </svg>
                                )}
                                {social.icon === 'linkedin' && (
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                    </svg>
                                )}
                                {social.icon === 'github' && (
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                    </svg>
                                )}
                                {social.icon === 'youtube' && (
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                                    </svg>
                                )}
                                {social.icon === 'discord' && (
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419-.0190 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1568 2.4189Z" />
                                    </svg>
                                )}
                            </a>
                        ))
                    }
                </div>

                <!-- Additional Info -->
                <div class="text-gray-400 text-sm">Made with ‚ù§Ô∏è for creators worldwide</div>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer-gradient {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 50%, #020617 100%);
        position: relative;
    }

    .footer-gradient::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, #2563eb, #9333ea, transparent);
    }

    .footer-link {
        color: #94a3b8;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        display: block;
    }

    .footer-link:hover {
        color: #2563eb;
        transform: translateX(4px);
    }

    .newsletter-btn {
        background: linear-gradient(135deg, #2563eb, #9333ea);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .newsletter-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 25px -5px rgb(37 99 235 / 0.3);
    }

    .newsletter-input::placeholder {
        color: rgb(148 163 184 / 0.7);
    }

    .newsletter-input:focus {
        outline: none;
        border-color: #2563eb;
        background: rgb(255 255 255 / 0.15);
    }

    .trust-indicator {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        background: rgb(255 255 255 / 0.05);
        border-radius: 1rem;
        border: 1px solid rgb(255 255 255 / 0.1);
        transition: all 0.3s ease;
    }

    .trust-indicator:hover {
        background: rgb(255 255 255 / 0.08);
        transform: translateY(-2px);
    }

    .trust-icon {
        font-size: 1.5rem;
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #2563eb, #9333ea);
        border-radius: 0.75rem;
    }

    .social-link {
        color: #94a3b8;
        padding: 0.75rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        background: rgb(255 255 255 / 0.05);
        border: 1px solid rgb(255 255 255 / 0.1);
    }

    .social-link:hover {
        color: #2563eb;
        background: rgb(37 99 235 / 0.1);
        border-color: #2563eb;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .newsletter-signup form {
            flex-direction: column;
        }

        .newsletter-btn {
            width: 100%;
        }
    }
</style>
