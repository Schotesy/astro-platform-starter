---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const seoData = {
    title: 'Contact Bullcast - Get in Touch with Our Team',
    description: "Ready to transform your broadcasting? Contact Bullcast's expert team for sales, support, or partnership inquiries. We're here to help.",
    keywords: 'contact bullcast, broadcasting support, sales inquiry, customer service, get in touch',
    ogImage: '/images/og-contact.jpg',
    canonicalURL: 'https://bullcast.com/contact'
};
---

<Layout title={seoData.title} description={seoData.description} keywords={seoData.keywords} ogImage={seoData.ogImage} canonicalURL={seoData.canonicalURL}>
    <Header />

    <main class="pt-32">
        <section class="hero-gradient py-20">
            <div class="container mx-auto px-4 text-center">
                <h1 class="text-5xl font-bold text-white mb-6">
                    Get in <span class="text-gradient">Touch</span>
                </h1>
                <p class="text-xl text-green-100 max-w-3xl mx-auto">Ready to transform your broadcasting? Our team is here to help you get started.</p>
            </div>
        </section>

        <!-- Contact Options -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
                    <div class="contact-card">
                        <div class="contact-icon">üìû</div>
                        <h3 class="text-xl font-bold mb-2">Phone</h3>
                        <p class="text-gray-600 mb-4">Speak with our sales team</p>
                        <a href="tel:+1-800-BULLCAST" class="text-green-600 font-semibold">1-800-BULLCAST</a>
                    </div>
                    <div class="contact-card">
                        <div class="contact-icon">‚úâÔ∏è</div>
                        <h3 class="text-xl font-bold mb-2">Email</h3>
                        <p class="text-gray-600 mb-4">Send us a message</p>
                        <a href="mailto:hello@bullcast.com" class="text-green-600 font-semibold">hello@bullcast.com</a>
                    </div>
                    <div class="contact-card">
                        <div class="contact-icon">üí¨</div>
                        <h3 class="text-xl font-bold mb-2">Live Chat</h3>
                        <p class="text-gray-600 mb-4">Chat with support</p>
                        <button class="text-green-600 font-semibold">Start Chat</button>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .hero-gradient {
        background: linear-gradient(135deg, #059669, #047857);
    }

    .text-gradient {
        background: linear-gradient(to right, #10b981, #059669);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
    }

    .contact-card {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        text-align: center;
        transition: all 0.3s ease;
    }

    .contact-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
    }

    .contact-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
</style>
